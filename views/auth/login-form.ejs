<div class="d-flex flex-column-reverse">
    <span id="lbl-welcome" class="fs-3 fw-bolder"></span>
    <img src="/metroland/assets/img/metroland_icon.png" alt="" class="w-150px rounded mx-auto d-block mb-3">
</div>
<div class="row mt-5">
    <form class="form w-100" novalidate="novalidate" method="post" id="login_form" action="/metroland/auth/doLogin">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <input type="hidden" name="e" id="e" />
        <input type="hidden" name="p" id="p" />
    </form>

    <form class="form w-100" novalidate="novalidate" method="post" enctype="multipart/form-data" id="kt_sign_in_form"
        action="#">

        <div class="fv-row mb-10">
            <label class="form-label fs-6 fw-bolder text-dark">Email</label>

            <div class="input-group input-group-sm mb-5">
                <span class="input-group-text">
                    <span class="svg-icon svg-icon-5">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-envelope" viewBox="0 0 16 16">
                            <path
                                d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z" />
                        </svg>
                    </span>
                </span>
                <input class="form-control form-control-sm" type="text" id="email" name="email" autocomplete="off"
                    return false />
            </div>
        </div>

        <div class="fv-row mb-2">
            <label class="form-label fw-bolder text-dark fs-6 mb-0">
                Password
            </label>

            <div class="position-relative input-group mb-3">
                <span class="input-group-text">
                    <span class="svg-icon svg-icon-5">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-lock" viewBox="0 0 16 16">
                            <path
                                d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1z" />
                        </svg>
                    </span>
                </span>

                <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-5"
                    id="show_hide_pwd">
                    <i class="bi bi-eye-slash fs-2" id="show_eye"></i>
                    <i class="bi bi-eye fs-2 d-none" id="hide_eye"></i>
                </span>
                <input class="form-control form-control-sm" type="password" name="password" id="password"
                    autocomplete="off" />
            </div>
        </div>

        <div class="text-center mt-10">
            <button id="kt_sign_in_submit" type="button" class="btn btn-sm btn-gold w-100 mb-5">
                <span class="indicator-label">Login</span>
                <span class="indicator-progress">Please wait...
                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
            </button>

        </div>
    </form>
</div>