<%- include('../layouts/f_header') %>
    <%- include('../layouts/f_menu_general') %>

        <div id="carouselExampleIndicators" class="carousel slide">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/metroland/assets/img/Aglonema.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/metroland/assets/img/Torino.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/metroland/assets/img/Untitled-1.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <!-- produk -->
        <div class="container-fluid py-2" id="produk">
            <div class="container-fluid px-md-5">
                <% let number=1; products.forEach(product=> {

                    const title=product.title.split(" ");const totWord = title.length;
                    if(number % 2 === 0){%>

                    <div class="card mx-auto mx-5 my-5 shadow-lg bg-body-tertiary rounded">
                        <div class="row g-0 d-flex align-items-center" style="overflow-x: hidden">
                            <div class="col-md-6 nomor-2" data-aos="fade-right" data-aos-duration="3000">
                                <div class="card-body text-end">
                                    <h1 class="card-title-product text-uppercase">
                                        <%= product.title.replace(title[totWord-1] , '' )%>
                                            <% if(totWord> 1){%>
                                                <span
                                                    style="color: #9B927F; text-decoration: underline; text-underline-offset: 10px; text-decoration-thickness: 4px ;">
                                                    <%= title[totWord-1]%>
                                                </span>
                                                <%}%>
                                    </h1>
                                    <p class="card-text text-start fs-6 text-wrap">
                                        <%= JSDOM.fragment(product.content.substring(0,350)).textContent%>...
                                    </p>
                                    <a href="/produk/<%= product.id %>">Selanjutnya <img
                                            src="/metroland/assets/img/arrow.png"></a>
                                </div>
                            </div>
                            <div class="col-md-6 nomor-1" data-aos="fade-left" data-aos-duration="3000">
                                <img src="/metroland/assets/img_product/<%= product.image_banner_1%>"
                                    class="img-fluid float-end rounded" alt="...">
                            </div>
                        </div>
                    </div>

                    <%}else{%>

                        <div class=" card mx-auto mx-5 my-5 shadow-lg bg-body-tertiary rounded">
                            <div class="row g-0 d-flex align-items-center" style="overflow-x: hidden">
                                <div class="col-md-6" data-aos="fade-right" data-aos-duration="3000">
                                    <img src="/metroland/assets/img_product/<%= product.image_banner_1%>"
                                        class="img-fluid float-start rounded" alt="...">
                                </div>
                                <div class="col-md-6" data-aos="fade-left" data-aos-duration="3000">
                                    <div class="card-body">
                                        <h1 class="card-title-product text-uppercase">
                                            <%= product.title.replace(title[totWord-1] , '' )%>
                                                <% if(totWord> 1){%>
                                                    <span
                                                        style="color: #9B927F; text-decoration: underline; text-underline-offset: 10px; text-decoration-thickness: 4px ;">
                                                        <%= title[totWord-1]%>
                                                    </span>
                                                    <%}%>
                                        </h1>
                                        <p class="card-text fs-6 text-wrap">
                                            <%= JSDOM.fragment(product.content.substring(0,350)).textContent%>...
                                        </p>
                                        <a href="/produk/<%= product.id %>">Selanjutnya <img
                                                src="/metroland/assets/img/arrow.png"></a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <%}number++});%>

            </div>
        </div>

        <%- include('../layouts/f_footer') %>
            <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
            <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>

            <script src="/metroland/assets/js/front_end/product/all_product.js"></script>
            <%- include('../layouts/f_end') %>